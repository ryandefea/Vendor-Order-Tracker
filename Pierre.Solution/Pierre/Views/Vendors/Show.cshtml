<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Vendor List!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using Pierre.Models;

    <h3>Here are all the orders in this vendor:</h3>

    <ol>
    @foreach (Order order in @Model["orders"])
    {
      <h6>@order.Title</h6>
      <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Description</a></li>
      <p>Price: $@order.Price</p>
    }
    </ol>



    <p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
    <p><a href='/vendors'>Return to vendor list</a></p>
    <p><a href='/'>Return to Main Page</a></p>
  </body>
</html>